import { Button } from "std-widgets.slint";

import { DialogWindow } from "dialog.slint";

export component MainWindow inherits Window {
    width: 300px;
    height: 150px;

    in property <bool> dialog_visible: false;
    callback toggle_dialog();

    in property <string> win_title;

    title: win_title;

    VerticalLayout {
        alignment: space-between;
        padding: 16px;

        Text {
            text: dialog_visible ? "State: ON" : "State: OFF";
            font-size: 24px;
            horizontal-alignment: center;
            vertical-alignment: center;
        }

        HorizontalLayout {
            alignment: center;

            Button {
                width: 100px;
                height: 40px;
                text: dialog_visible ? "Turn OFF" : "Turn ON";
                clicked => { toggle_dialog(); }
            }
        }
    }
}